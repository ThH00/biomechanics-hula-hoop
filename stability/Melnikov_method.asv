m = 1;
l = 1;
g = 9.81;

n = 50;
q0 = linspace(-2*pi,2*pi,n);
m = 10;
p0 = linsw

figure()
hold on
for i = 1:n

    tspan = [0 5];
    y0 = [q0(i) 0];
    [t,y] = ode45(@(t,y) simple_pendulum(t,y,m,l,g), tspan, y0);
    
    plot(y(:,1),y(:,2),'k','LineWidth',2)
end

function dydt = simple_pendulum(t,y,m,l,g)
  dydt = zeros(2,1);
  dydt(1) = y(2)/(m*l^2);
  dydt(2) = -m*g*l*sin(y(1));
end